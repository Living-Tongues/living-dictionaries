{
  "compilerOptions": {
    // "moduleResolution": "node", // turn on if changing to esm
    // "module": "es2020",
    "module": "commonjs", // use 'es2020' if changing to esm
    "noImplicitReturns": true,
    // "noUnusedLocals": true, // turned off
    "outDir": "lib",
    "sourceMap": true,
    // "strict": true, // turned off
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "types": [
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/algolia",
    "src/email",
    "src/index.ts"
  ],
  // "exclude": ["./**/*test.ts"]
}