{
  "name": "@living-dictionaries/site",
  "version": "0.0.1",
  "description": "livingdictionaries.app",
  "type": "module",
  "main": "src/lib/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "kitbook": "vite dev --mode kitbook",
    "kitbook:build": "svelte-kit sync && vite build --mode kitbook",
    "kitbook:preview": "vite preview --mode kitbook",
    "check": "svelte-check --tsconfig ./tsconfig.json --threshold error --diagnostic-sources js,svelte",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --threshold warning --diagnostic-sources js,svelte --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.49",
    "@living-dictionaries/parts": "workspace:^0.0.1",
    "@living-dictionaries/types": "workspace:^1.0.0",
    "@playwright/test": "^1.28.1",
    "@sentry/browser": "^6.18.2",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@turf/center": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@types/d3-dsv": "^3.0.0",
    "@types/file-saver": "^2.0.4",
    "@types/mapbox-gl": "^2.7.6",
    "@types/mapbox__mapbox-gl-geocoder": "^4.7.3",
    "@types/recordrtc": "^5.6.10",
    "@unocss/preset-icons": "^0.48.0",
    "@vitest/ui": "^0.29.7",
    "algoliasearch": "^4.11.0",
    "csvtojson": "^2.0.10",
    "d3-dsv": "^3.0.1",
    "dot-object": "^2.1.4",
    "file-saver": "^2.0.5",
    "firebase": "^9.14.0",
    "instantsearch.js": "^4.33.2",
    "jszip": "^3.7.1",
    "kitbook": "^1.0.0-alpha.32",
    "logrocket": "^2.1.2",
    "lz-string": "^1.4.4",
    "recordrtc": "^5.6.2",
    "simple-git-hooks": "^2.8.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.2.0",
    "svelte-i18n": "^3.3.13",
    "svelte-pieces": "1.0.62",
    "svelte-preprocess": "^5.0.0",
    "sveltefirets": "^0.0.32",
    "temp-s-p-u": "^0.0.7",
    "tslib": "^2.4.1",
    "typescript": "~4.9.4",
    "unocss": "^0.48.0",
    "vite": "^4.1.1",
    "vitest": "^0.29.7",
    "wavesurfer.js": "^5.2.0",
    "web-vitals": "^2.1.2",
    "xss": "^1.0.14"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.+(ts|svelte)": "eslint --fix",
    "**/*.+(ts|svelte|json)": [
      "prettier --write"
    ]
  }
}
