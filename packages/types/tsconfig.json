{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "vitest/globals"
    ],
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "supabase/**/*",
    "index.ts",
    "**.interface.ts"
  ],
  "exclude": ["node_modules"]
}
// Only added for vitest/globals - can remove if removing vitest
