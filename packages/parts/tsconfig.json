{
  "extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM"],
    "moduleResolution": "bundler",
		"ignoreDeprecations": "5.0",
		"module": "es2020",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		// "strict": true,
		"target": "es2020",
		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			],
			"@living-dictionaries/parts": [
				"./src/lib"
			],
			"@living-dictionaries/parts/*": [
				"./src/lib/*"
			]
		},
		"types": [
			"youtube",
			"vitest/globals",
			"vitest/importMeta"
		]
	}
}