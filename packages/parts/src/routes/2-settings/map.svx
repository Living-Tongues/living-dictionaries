    on:remove={() => {
      alert('removed coordinates');
    }} />
</Story>

## Coordinates Modal

<Story
  name="Passing Coordinates In"
  input={{ lat: '-90-90;0', lng: '-180-180;0' }}
  let:output={{ lat, lng }}
  let:set>
  <ShowHide let:show let:toggle>
    <Button onclick={toggle}
      >Modify Coordinates:
      <LatLngDisplay lat={+lat} lng={+lng} /></Button>
    {#if show}
      <CoordinatesModal
        lng={+lng}
        lat={+lat}
        on:update={(event) => {
          set('lat', event.detail.lat);
          set('lng', event.detail.lng);
        }}
        on:remove={() => {
          set('lat', 0);
          set('lng', 0);
        }}
        on:close={toggle} />
    {/if}
  </ShowHide>
</Story>

<Story name="Passing Undefined">
  <ShowHide let:show let:toggle>
    <Button onclick={toggle}>Add Coordinates</Button>
    {#if show}
      <CoordinatesModal
        lng={undefined}
        lat={undefined}
        on:update={(event) => alert(`set: ${event.detail.lat}, ${event.detail.lng}`)}
        on:close={toggle} />
    {/if}
  </ShowHide>
</Story>

