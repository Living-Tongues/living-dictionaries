    "svelte-check": "^2.2.10",
    "svelte-i18n": "^3.3.13",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.8.0",
    "svench": "^0.2.0-29",
    "tailwindcss": "^2.2.19",
    "tailwindcss-dir": "^4.0.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "wavesurfer.js": "^5.1.0",
    "web-vitals": "^2.1.2"
  },
  "type": "module",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.+(ts|svelte)": "eslint --fix",
    "**/*.+(ts|svelte|json)": [
      "prettier --write"
