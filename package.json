    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "file-saver": "^2.0.5",
    "firebase": "^9.1.3",
    "instantsearch.js": "4.28.0",
    "jest": "^27.3.1",
    "jszip": "^3.7.1",
    "logrocket": "^1.3.0",
    "mapbox-gl": "^2.3.0",
    "node-fetch": "^2.6.1",
    "nprogress": "^0.2.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "recordrtc": "^5.6.2",
