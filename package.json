{
	"name": "living-dictionaries",
	"version": "0.0.1",
	"scripts": {
		"dev": "pnpm --filter=site dev",
		"dev:open": "pnpm --filter=site dev --open",
		"build": "pnpm --filter=site build",
		"preview": "pnpm --filter=site preview",
		"test": "pnpm --filter=site test",
		"test:ui": "pnpm --filter=site test:ui",
		"test:all": "pnpm --recursive --stream test -- --run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"parts": "pnpm --filter=parts dev",
		"parts:build": "pnpm --filter=parts build",
		"parts:test": "pnpm --filter=parts test",
		"kitbook": "pnpm --filter=site kitbook",
		"both": "pnpm --filter=./packages/** dev",
		"lint": "eslint .",
		"format-check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. .",
		"check-packages": "pnpm update --interactive --recursive --latest"
	},
	"devDependencies": {
		"@playwright/test": "^1.35.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.6",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"typescript": "~4.9.4"
	}
}