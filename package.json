{
	"name": "living-dictionaries",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter=site dev",
		"dev:open": "pnpm --filter=site dev --open",
		"build": "pnpm --filter=site build",
		"preview": "pnpm --filter=site preview",
		"test": "pnpm vitest",
		"test:site": "pnpm --filter=site test",
		"test:ui": "pnpm --filter=site test:ui",
		"test:all": "pnpm --recursive --stream test -- --run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"parts": "pnpm --filter=parts dev",
		"parts:build": "pnpm --filter=parts build",
		"parts:test": "pnpm --filter=parts test",
		"kitbook": "pnpm --filter=site kitbook",
		"both": "pnpm --filter=./packages/** dev",
		"lint": "eslint . --cache",
		"lint:fix": "eslint . --cache --fix",
		"check-packages": "pnpm update --interactive --recursive --latest"
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "6.7.5",
		"@typescript-eslint/parser": "6.7.5",
		"eslint": "^8.51.0",
		"eslint-define-config": "^1.24.1",
		"eslint-plugin-svelte": "^2.34.0",
		"eslint-plugin-svelte-stylistic": "^0.0.4",
		"eslint-plugin-vitest": "^0.3.2",
		"globals": "^13.23.0",
		"lint-staged": "^15.0.1",
		"simple-git-hooks": "^2.8.1",
		"svelte": "^3.55.1",
		"typescript": "~5.1.6",
		"vitest": "^0.34.6"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,svelte,svx}": [
			"eslint --cache --fix"
		]
	}
}